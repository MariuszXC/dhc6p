<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <path>magcompass.ac</path>

	<animation>
		<type>select</type>
		<object-name>Compass</object-name>
		<object-name>Compass.ball</object-name>
		<condition>
			<or>
				<equals>
					<property>sim/current-view/name</property>
					<value>Pilot</value>
				</equals>
				<equals>
					<property>sim/current-view/name</property>
					<value>Copilot View</value>
				</equals>
				<equals>
					<property>sim/current-view/name</property>
					<value>Overhead Panel</value>
				</equals>
			</or>
		</condition>
	</animation>
 
   <animation>
        <type>rotate</type>
        <object-name>Compass.ball</object-name>
        <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
        <axis>
            <x>0.0</x>
            <y>0.0</y>
            <z>1.0</z>
        </axis>
    </animation>
'
	<animation>
		<object-name>Compass.ball</object-name>
		<type>material</type>
		<condition>
			<and>
				<property>controls/electric/battery-switch</property>
				<property>controls/electric/dc-master</property>
			</and>
		</condition>

		<emission>
			<factor-prop>controls/lighting/coplt-radio-va-pnl-lts</factor-prop>
			<red>1.2</red>
			<green>.80</green>
			<blue>0.60</blue>
		</emission>
	</animation>
   <animation>
        <type>pick</type>
        <object-name>Compass</object-name>
        <object-name>Compass.ball</object-name>            
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Heading-deg</tooltip-id>
                <label>Magnetic Heading: %3d deg</label>
                <mapping>heading</mapping>
                <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
            </binding>
        </hovered>
    </animation>
</PropertyList>


