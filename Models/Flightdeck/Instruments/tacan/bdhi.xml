	<animation>
		<object-name>central-mask</object-name>
		<type>material</type>
		<condition>
			<and>
				<property>controls/electric/power-source</property>
				<property>controls/electric/dc-master</property>
			</and>
		</condition>
		<emission>
			<factor-prop>controls/lighting/coplt-radio-va-pnl-lts</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>

	<animation>
		<object-name>compass-card</object-name>
		<type>material</type>
		<condition>
			<and>
				<property>controls/electric/power-source</property>
				<property>controls/electric/dc-master</property>
			</and>
		</condition>

		<emission>
			<factor-prop>controls/lighting/coplt-radio-va-pnl-lts</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>

	<animation>
		<object-name>indexes</object-name>
		<type>material</type>
		<condition>
			<and>
				<property>controls/electric/power-source</property>
				<property>controls/electric/dc-master</property>
			</and>
		</condition>

		<emission>
			<factor-prop>controls/lighting/coplt-radio-va-pnl-lts</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>

	<animation>
		<object-name>needles-flags-drums</object-name>
		<type>material</type>
		<condition>
			<and>
				<property>controls/electric/power-source</property>
				<property>controls/electric/dc-master</property>
			</and>
		</condition>

		<emission>
			<factor-prop>controls/lighting/coplt-radio-va-pnl-lts</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>


	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>50</max-m>
	</animation>

</PropertyList>
