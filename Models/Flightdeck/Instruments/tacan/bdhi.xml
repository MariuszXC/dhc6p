<PropertyList>

	<!-- Bearing, Distance, Heading Indicator -->
	<name>BDHI</name>
	<path>bdhi.ac</path>

	<animation>
		<type>select</type>
		<object-name>bdhi</object-name>
		<condition>
			<or>
				<equals>
					<property>sim/current-view/name</property>
					<value>Pilot</value>
				</equals>
				<equals>
					<property>sim/current-view/name</property>
					<value>Copilot View</value>
				</equals>
				<equals>
					<property>sim/current-view/name</property>
					<value>Overhead Panel</value>
				</equals>
			</or>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>compass-card</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>




	<!-- needle #1 = DF -->
	<animation>
		<type>select</type>
		<object-name>needle-2</object-name>
		<condition>
			<property>instrumentation/tacan/in-range</property>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>needle-2</object-name>
		<property>ai/control/heading</property>
		<axis><x>1</x></axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>needle-2-off</object-name>
		<condition>
			<not>
				<property>instrumentation/tacan/in-range</property>
			</not>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>needle-2-off</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>





	<!-- needle #2 = TACAN -->
	<animation>
		<type>select</type>
		<object-name>needle-1</object-name>
		<condition>
			<property>instrumentation/tacan/in-range</property>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>needle-1</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>needle-1</object-name>
		<property>instrumentation/tacan/indicated-mag-bearing-deg</property>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>needle-1-off</object-name>
		<condition>
				<not>
					<property>instrumentation/tacan/in-range</property>
				</not>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>needle-1-off</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>

	<!-- tacan distance digital display -->
	<animation>
		<type>select</type>
		<object-name>no-range-flag</object-name>
		<condition>
				<not>
					<property>instrumentation/tacan/in-range</property>
				</not>
		</condition>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>range-drum-1</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<step>1</step>
		<axis><y>-1</y></axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>range-drum-2</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<axis><y>-1</y></axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>range-drum-3</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.001</factor>
		<offset>-100</offset>
		<step>100</step>
		<axis><y>-1</y></axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>range-deci</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>360</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.0110</y-m>
			<z-m>-0.0191</z-m>
		</center>
		<axis><x>1</x></axis>
	</animation>

